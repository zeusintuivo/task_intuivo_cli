_darwin__64() {
    sudo_it
  # export USER_HOME="/home/${SUDO_USER}"
  enforce_variable_with_value USER_HOME "${USER_HOME}"
  install_requirements "darwin" "
    readline
    bzip2
    sqlite
    make
    automake
    cmake
    gcc
    libtool
    git
    zlib
    bzip2
    openssl
    xz
    libffi
    python-tk
    python-tkinter
    python3-tkinter
    tk
    findutils
  "
  _git_clone_pyenv
  _add_variables_to_bashrc_zshrc

} # end _darwin__64

